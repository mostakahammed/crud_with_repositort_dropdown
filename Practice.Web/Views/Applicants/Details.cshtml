@model Practice.DataAccess.Models.Applicant

<div class="container">
    <div class="row my-4">
        <h3>Applicant Details</h3>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="w-100">
                <tr>
                    <td class="d-flex justify-content-between"> <strong>@Html.DisplayNameFor(x=>x.ApplicantName)</strong> <span>:</span></td>
                    <td>@Html.DisplayFor(x=>x.ApplicantName)</td>
                </tr>
                <tr>
                    <td class="d-flex justify-content-between"> <strong>@Html.DisplayNameFor(x=>x.FatherName)</strong> <span>:</span></td>
                    <td>@Html.DisplayFor(x=>x.FatherName)</td>
                </tr>
                <tr>
                    <td class="d-flex justify-content-between"> <strong>@Html.DisplayNameFor(x=>x.MotherName)</strong> <span>:</span></td>
                    <td>@Html.DisplayFor(x=>x.MotherName)</td>
                </tr>
                <tr>
                    <td class="d-flex justify-content-between"> <strong>@Html.DisplayNameFor(x=>x.Gender)</strong> <span>:</span></td>
                    <td>@Html.DisplayFor(x=>x.Gender)</td>
                </tr>
                <tr>
                    <td class="d-flex justify-content-between"> <strong>@Html.DisplayNameFor(x=>x.Address)</strong> <span>:</span></td>
                    <td>@Html.DisplayFor(x=>x.Address)</td>
                </tr>
                <tr>
                    <td class="d-flex justify-content-between"> <strong>@Html.DisplayNameFor(x=>x.DOB)</strong> <span>:</span></td>
                    <td>@Html.DisplayFor(x=>x.DOB)</td>
                </tr>
            </table>
            <br />
            <a asp-action="index" class="btn  btn-primary">Go Back</a>
        </div>
    </div>
</div>